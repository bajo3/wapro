# ==============================================
# WAPRO - Variables de Entorno
# ==============================================

# ============ DATABASE ============
POSTGRES_DB=wapro
POSTGRES_USER=wapro
POSTGRES_PASSWORD=change-this-password-in-production
POSTGRES_PORT=5432

# Database connection string (se genera autom치ticamente)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@localhost:5432/${POSTGRES_DB}

# ============ REDIS ============
REDIS_PASSWORD=redis-secure-password
REDIS_PORT=6379
REDIS_URL=redis://:${REDIS_PASSWORD}@localhost:6379

# ============ JWT SECRETS ============
# IMPORTANTE: Cambiar estos valores en producci칩n!
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this
JWT_EXPIRATION=8h
JWT_REFRESH_EXPIRATION=7d

# ============ EVOLUTION API ============
EVOLUTION_PORT=8080
EVOLUTION_API_URL=http://localhost:8080

# WhatsApp Configuration
WA_VERSION=2.3000.1014398537
WA_BROWSER=Chrome

# Storage (S3/MinIO)
S3_ENABLED=false
S3_BUCKET_NAME=evolution
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_ENDPOINT=
S3_REGION=us-east-1

# ============ PANEL WHATICKET ============
BACKEND_PORT=3000
FRONTEND_PORT=3001
BACKEND_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3001

# Database (Panel Backend)
DB_DIALECT=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USER=${POSTGRES_USER}
DB_PASS=${POSTGRES_PASSWORD}
DB_NAME=${POSTGRES_DB}

# Features
USER_LIMIT=10000
CONNECTIONS_LIMIT=100000

# Auto-close tickets
HOURS_CLOSE_TICKETS_AUTO=

# ============ BOT SERVICE ============
BOT_PORT=3002
BOT_ENABLED=true

# ============ EVOLUTION MANAGER ============
MANAGER_PORT=3003

# ============ GATEWAY META ============
GATEWAY_PORT=3004
META_APP_ID=
META_APP_SECRET=
META_VERIFY_TOKEN=

# ============ INTEGRATIONS ============

# OpenAI
OPENAI_API_KEY=

# Dify
DIFY_API_URL=
DIFY_API_KEY=

# Typebot
TYPEBOT_API_URL=
TYPEBOT_API_KEY=

# N8N
N8N_API_URL=
N8N_API_KEY=

# ============ EVENT HANDLERS ============

# Webhooks
WEBHOOK_ENABLED=true
WEBHOOK_BASE_URL=

# RabbitMQ
RABBITMQ_ENABLED=false
RABBITMQ_URI=amqp://localhost:5672

# Kafka
KAFKA_ENABLED=false
KAFKA_BROKERS=localhost:9092

# NATS
NATS_ENABLED=false
NATS_URI=nats://localhost:4222

# SQS
SQS_ENABLED=false
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# ============ MONITORING ============

# Sentry (Error Tracking)
SENTRY_DSN=

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Metrics
METRICS_ENABLED=false
PROMETHEUS_PORT=9090

# ============ SECURITY ============

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WHITELIST=127.0.0.1,::1

# CORS
CORS_ORIGIN=http://localhost:3001

# ============ DEVELOPMENT ============
NODE_ENV=development
DEBUG=false

# ============ PRODUCTION ============
# Descomentar y configurar para producci칩n

# SSL/TLS
# SSL_ENABLED=true
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# Domain
# DOMAIN=your-domain.com

# Email (para notificaciones)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-password
# SMTP_FROM=noreply@your-domain.com

# Backup
# BACKUP_ENABLED=true
# BACKUP_SCHEDULE=0 2 * * *
# BACKUP_RETENTION_DAYS=7
# BACKUP_S3_BUCKET=backups

# ============ NOTES ============
# 1. Copiar este archivo a .env: cp .env.example .env
# 2. Cambiar TODOS los valores marcados como "change-this"
# 3. Nunca commitear .env al repositorio
# 4. En producci칩n, usar variables de entorno del sistema o secrets management
